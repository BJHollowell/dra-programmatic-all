## view name: vw_programmatic_all_pacific
## description: create partner view for programmatic_all that utilizes raw data and standardizes logic within prog_all
## created by: bj.hollowell@meredith.com
## Last modified on: 3/1/2022
## Last modified by: bj.hollowell@meredith.com
## Change log: limiting fields pulled in from raw data source
##
##
## notes:
##

WITH

pacific_base AS (
    SELECT
        date,
        tier,
        ad_size,
        final_device,
        net_revenue,
        gross_revenue,
        total_impressions
    FROM `meredith-switchboard.pacific.pacific_flat_file_20211113`
),

pacific_cleaned AS (
    SELECT
        'Pacific flat file' AS source,
        CAST(date AS TIMESTAMP) AS date,
        'Pacific' AS partner,
        '' AS tag_site,
        'Open' AS transaction_type,
        'AR' AS site,
        tier AS tier,
        '' AS ad_size_initial,
        ad_size AS ad_size,
        'Display' AS ad_type,
        'Tag in adserver' AS path_type,
        '' AS device_type_initial,
        final_device AS device_type,
        'Australia' AS country_initial,
        'XUS' AS country,
        '' AS dsp_initial,
        '' AS buyer_initial,
        '' AS advertiser_initial,
        '' AS deal_id,
        '' AS deal_name,
        net_revenue AS net_revenue,
        gross_revenue AS gross_revenue,
        total_impressions AS imps,
        NULL AS active_view_measured_impressions,
        NULL AS active_view_viewed_impressions,
        NULL AS bid_requests,
        NULL AS bid_repsonses
    FROM pacific_base
)

SELECT * FROM pacific_cleaned
